// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String
  contact     String
  lastHistory String
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("clientes")
}

model Lead {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String
  contact     String
  lastHistory String
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("Leads")
}
